{% extends "base.html.jinja2" %}
{% block title %}{{ post["title"] }} - {% endblock %}
{% block content %}
<div class="h-entry">
<a class="u-url" href="{{ post["url"] }}"><h2 class="p-name">{{ post["title"] }}</h2></a>
<p>Published by <a class="p-author h-card" href="http://trenton.cc">Trenton</a>
on <time class="dt-published" datetime={{ post["date"] }}>{{ post["date"] }}</time>
{% if post["categories"] %}
in 
{% for c in post["categories"] %}<a class="p-category">{{ c }}</a>{% endfor %}
{% endif %}

<div class="e-content">
{{ post["content"] }}
</div>

<link rel="webmention" href="https://webmention.io/trenton.cc/webmention" />
<link rel="pingback" href="https://webmention.io/trenton.cc/xmlrpc" />

</div>
{% endblock %}
